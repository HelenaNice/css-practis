<header class="header row g-0">
  <div class="logo">
    {{>logo}}
  </div>
  {{!-- посилання справа сторінки --}}
  <nav class="header_nav col-9 ">
    <div class="header_nav_right">
      {{!-- ітeрація списка зі змінною header --}}
      {{>nav list=header}}
    </div>
  </nav>
</header>
{{!--block hero--}}
{{#with hero}}
<div class="hero">
  <div class="hero_content">
    <h1 class="hero_title">{{title}}</h1>
    <p class="hero_text">{{text}}</p>
  </div>
  <img src="{{photo}}" alt="Hero image" class="hero_image">

</div>
{{/with}}

{{!-- main, block 3 card --}}
<main class="blog">
  {{#each blog}}
  {{>cardBlog data=this}}
  {{/each}}
</main>

{{!-- subscr --}}
{{#with form}}
<div class="form">
  <div class="form_content">
    <h3 class="form_title">{{title}}</h3>
    <p class="form_info">{{info}}</p>
  </div>
  <div class="form_action">
    <a class="button form_button" href="{{href}}">{{button}}</a>
  </div>
</div>

{{/with}}





{{!-- блок футера --}}

<footer class="row footer">
  <div class="col-3">
    {{>logo}}
    <span class="footer_copyright">Copyright 2023-2024</span>
  </div>
  {{!-- ітерація змінної title--}}
  {{#each footer}}
  <div class="col-3">
    <span class="footer_title">{{title}}</span>
    {{!-- ітeрація списка зі змінною links вертикально --}}
    {{>nav list=links isVertical=true}}
  </div>
  {{/each}}
</footer>




</div>