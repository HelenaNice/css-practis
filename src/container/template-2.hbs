<div class="page">
  <div class="page_content">
    <div class="page_block">
      <header class="header row g-0">
        <div class="col-3">
          {{>logo}}
        </div>
        {{!-- посилання справа сторінки --}}
        <nav class="header_nav col-9 ">
          <div class="header_nav_right">
            {{!-- ітeрація списка зі змінною header --}}
            {{>nav list=header}}
          </div>
        </nav>
      </header>
      {{>divider}}
    </div>

    {{!-- хироблок заголовок та вступ--}}
    <div class="hero_block">
      <div class="hero">
        {{#with hero}}
        {{>hero title=title text=text}}
        {{!-- виводимо кнопку --}}
        {{!-- <a class="btn btn-primary" href="{{button.url}}">{{button.text}} </a> --}}
        {{!-- створюємо кнопку через css --}}
        <a class="button" href="{{button.url}}">{{button.text}} </a>
        {{/with}}
      </div>
    </div>
    {{!-- блок превью новини --}}
    <div class="page_block">
      <div class="row g-4">
        {{#each preview}}
        <div class="col-6">
          {{> card_preview data=this}}
        </div>
        {{/each}}
      </div>
    </div>
    {{!-- блок с заголовком і  контурними кнопками посилань--}}
    <main class="main">
      <divc class="row g-0">
        <div class="col-12">
          <div class="list_header">
            <div class="row">
              <div class="col-5">
                <h2 class="list_title">List of post</h2>
              </div>
              <div class="col-7">
                <div class="mark_button_right">
                  {{#each categories}}
                  <button class="mark_button">{{text}}</button>
                  {{/each}}
                </div>
              </div>
            </div>
          </div>
        </div>
        {{!-- список новин с коротким описом-бокова--}}
        <div class="col-7">
          <div class="list">
            {{#each news }}
            {{> cardPost data=this}}
            {{/each}}
          </div>
        </div>
        <div class="col-5">
          <aside class="list_aside">
            <div class="about">
              <h4 class="about_title">About</h4>
              <p class="about_text">{{about}}</p>
            </div>

            {{!-- нижн блок с архівом --}}
            {{> linkList data=archive title="Archives"}}
            {{> linkList data=social title="Social"}}
          </aside>
        </div>
  </div>
  </divc>
  </main>

</div>
</div>



{{!-- блок футера --}}
<div class="page_block">
  {{>divider}}
  <footer class="row footer">
    <div class="col-3">
      {{>logo}}
      <span class="footer_copyright">Copyright 2023-2024</span>
    </div>
    {{!-- ітерація змінної title--}}
    {{#each footer}}
    <div class="col-3">
      <span class="footer_title">{{title}}</span>
      {{!-- ітeрація списка зі змінною links вертикально --}}
      {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
  </footer>
</div>

</div>
</div>
</div>