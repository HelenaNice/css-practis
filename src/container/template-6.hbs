<header class="header row g-0">
  <div class="logo">
    {{>logo}}
  </div>
  {{!-- посилання справа сторінки --}}
  <nav class="header_nav col-9 ">
    <div class="header_nav_right">
      {{!-- ітeрація списка зі змінною header --}}
      {{>nav list=header}}
    </div>
  </nav>
</header>

{{!--block для інфо та форми--}}
<main class="main">
  {{#with info}}
  <div class="info">
    <h1 class="info_title">{{title}}</h1>
    <div class="info_description">{{description}}</div>
  </div>
  {{/with}}

  {{!-- форма --}}
  {{#with form}}
  <form class="form">
    <h2 class="form_title">{{title}}</h2>
    {{!-- ітеруем инпути --}}
    <div class="form_input_list">
      {{#each inputs}}
      <div class="fild">
        <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" id="form-input-{{id}}">
      </div>
      {{/each}}
    </div>

    {{!-- чекбокс --}}

    <div class="form_checkbox">
      <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
      {{!-- имитация инпута и стилизация чепез пустій див --}}
      <div></div>
      <label for="{{checkbox.name}}">{{checkbox.label}}</label>
    </div>


    {{!-- кнопка --}}
    <button type="submit" class="form_button">{{button}}</button>
    {{!-- текст під кнопкою --}}
    <div class="line"></div>
    <p class="form_info">{{info}}</p>

  </form>
  {{/with}}
</main>
{{!-- updates_3 cards+link --}}

<div class="updates">
  {{#with updates}}
  {{!-- hed --}}
  <h1 class="title_upd">{{title}}</h1>
  {{!-- list:pict+nik+descript --}}
  <div class="list">
    {{#each list}}
    {{>cardUpd data=this}}
    {{/each}}
  </div>
  {{!-- link--}}
  <div class="show_all">
    <a href="{{show_all.url}}">{{show_all.text}}</a>
  </div>
  {{/with}}

</div>

{{!--  block expirience  --}}
{{#with expirience}}
<div class="expirience">
  <div class="expirience_badge">{{badge}}</div>
  <h2 class="expirience_title">{{title}}</h2>
  <div class="exp_block">
    {{#each list}}
    {{>cardExp}}
    {{/each}}</div>
</div>

{{/with}}








{{!-- блок футера --}}

<footer class="row footer">
  <div class="col-3">
    {{>logo}}
    <span class="footer_copyright">Copyright 2023-2024</span>
  </div>
  {{!-- ітерація змінної title--}}
  {{#each footer}}
  <div class="col-3">
    <span class="footer_title">{{title}}</span>
    {{!-- ітeрація списка зі змінною links вертикально --}}
    {{>nav list=links isVertical=true}}
  </div>
  {{/each}}
</footer>




</div>